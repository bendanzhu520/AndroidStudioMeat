<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <com.winorout.meat.found.find.tools.BannerLayout
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:defaultImage="@mipmap/ic_launcher"
            app:indicatorMargin="10dp"
            app:indicatorShape="oval"
            app:indicatorSpace="2dp"
            app:scrollDuration="1100"
            app:selectedIndicatorColor="?attr/colorPrimary"
            app:selectedIndicatorHeight="6dp"
            app:selectedIndicatorWidth="6dp"
            app:titleColor="#ff0000"
            app:unSelectedIndicatorColor="#99ffffff"
            app:unSelectedIndicatorHeight="6dp"
            app:unSelectedIndicatorWidth="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/gift_yellow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="热门分享"
                    android:textSize="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/love_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="热门分享"
                    android:textSize="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/fivepointedstar_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="热门分享"
                    android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#bcbcbc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="热门分类"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"/>

       <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
           android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo1" />

                    </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo2" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo3" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo1" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo2" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo3" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo1" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo2" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lunbo3" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#dadada">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="热门标签"
                android:textSize="12dp"
                android:gravity="center"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_width="0dp"
                    android:text="闲置"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:text="断舍离"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_width="0dp"
                    android:text="物品放生"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:text="全新"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_width="0dp"
                    android:text="不精品不分享"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:text="有用你就拿着"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_width="0dp"
                    android:text="跟着有肉有肉吃"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:text="伦家是好人"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_width="0dp"
                    android:text="葫芦娃的宝贝"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="0dp"
                    android:text="S酱-（@_@）-"
                    android:textSize="14dp"
                    android:textColor="#ff496a"
                    android:background="#ffffff"/>

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
